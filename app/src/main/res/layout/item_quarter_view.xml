<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcv_quarter_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200dp"
    android:layout_margin="@dimen/_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_quarter_name"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt_data_used_hint"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Test" />

        <TextView
            android:id="@+id/txt_data_used_hint"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/data_used_in"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/_10sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_quarter_data_usage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quarter_name"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_quarter_data_usage"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:textSize="@dimen/_30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_data_used_hint"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Test" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>